<p><%= @show.rating %></p>

<%# Edit show  %>
<% if Helpers.current_user(session).id == @show.user_id %>
<a href="/shows/<%= @show.id %>/edit">Edit Show</a>
<% end %>

<%# Add a delete form %>
<% if Helpers.current_user(session).id == @show.user_id %>
<form action="/shows/<%= @show.id %>/delete" method="post">
<input type="hidden" name="_method" value="delete">
<input type="submit" value="delete">
<% end %>
</form>